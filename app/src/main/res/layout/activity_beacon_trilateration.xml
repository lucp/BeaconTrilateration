<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BeaconTrilaterationActivity"
    android:id="@+id/relativelayoutid"
    android:nestedScrollingEnabled="false">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show path"
        android:id="@+id/show_path_button"
        android:layout_marginTop="46dp"
        android:onClick="onShowPathButtonClick"
        android:nestedScrollingEnabled="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are here !"
        android:id="@+id/URHere_button"
        android:onClick="onURHereClick"
        android:layout_alignBottom="@+id/show_path_button"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
